.dropup
  %button{class: 'btn btn-default dropdown-toggle pull-right', type: 'button', 'data-toggle': "dropdown", 'aria-haspopup': "true", 'aria-expanded': "false", id: "dropdownMenu2" }
    Chat
    = conversation.id
    %span{class: "caret"}
  %ul{class: 'dropdown-menu pull-right', 'aria-labelledby': "dropdownMenu2"}
    %li
      .conversation.col-md-4.border-radius-large{'data-conversation': conversation.id, id: "conversation" + conversation.id.to_s, style: ['border-style': 'solid']}
        .conversation-messages.panel.panel-default.border-radius-base.center-block
          = render conversation.messages
        = render 'messages/form'