%h1
  = @category.name
.picture.row
  .center-block{id: 'picture-carousel', class: "carousel slide"}
    %ol.carousel-indicators
      - @pictures.each_with_index do |picture, index|
        - unless picture.location_url.blank?
          - if index == 0
            %li.active{'data-target': "#picture-carousel", 'data-slide-to': index}
          - else
            %li{'data-target': "#picture-carousel", 'data-slide-to': index}
    .carousel-inner{role: "listbox"}
      - @pictures.each_with_index do |picture, index|
        - unless picture.location_url.blank?
          - if index == 0
            .item.active
              = link_to image_tag(picture.location_url, class: "img-thumbnail center-block"), category_picture_path(picture.category, picture)
          - else
            .item
              = link_to image_tag(picture.location_url, class: "img-thumbnail center-block"), category_picture_path(picture.category, picture)
    %a.left.carousel-control{"data-slide": "prev", href: "#picture-carousel", role: "button"}
      %span.glyphicon.glyphicon-chevron-left{"aria-hidden": "true"}
      %span.sr-only Previous
    %a.right.carousel-control{"data-slide": "next", href: "#picture-carousel", role: "button"}
      %span.glyphicon.glyphicon-chevron-right{"aria-hidden": "true"}
      %span.sr-only Next
.row
  = render "pictures/upload"